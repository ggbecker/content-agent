{
  "mcpServers": {
    "content-agent": {
      "command": "python",
      "args": ["-m", "content_agent"],
      "env": {
        "CONTENT_AGENT_CONTENT__REPOSITORY": "managed",
        "CONTENT_AGENT_CONTENT__MANAGED_PATH": "~/.content-agent/content",
        "CONTENT_AGENT_CONTENT__AUTO_UPDATE": "true",
        "CONTENT_AGENT_LOGGING__LEVEL": "INFO"
      }
    }
  }
}
